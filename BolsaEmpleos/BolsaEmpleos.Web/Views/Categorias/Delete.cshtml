@model BolsaEmpleos.Data.Model.Categoria

@{
    ViewBag.Title = "Delete";
}

<h3>Eliminar categoria</h3>

<h4>
    Esta seguro de eliminar la categoria 
    <span style="color: red;">@Html.DisplayFor(model => model.Nombre)</span>
    con estado 
    <span style="color: red;">@(Model.Estado ? "Activo" : "Innactivo")</span> 
</h4>

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col s12" style="margin-bottom: 20px;">
                <button class="btn waves-effect waves-light" type="submit" name="action" value="Delete">
                    Eliminar
                    <i class="material-icons right">send</i>
                </button>
            </div>
        @Html.Partial("_VolverA", new ViewDataDictionary(ViewData) { { "accion", "Index" }, { "string", "al listado" } })
        </div>
    }
</div>
